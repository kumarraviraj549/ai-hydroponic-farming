# ===================================================
# HYDROAI BACKEND ENVIRONMENT CONFIGURATION
# ===================================================
# DO NOT commit actual credentials to this repository!
# Copy this file to .env and replace with your values
# ===================================================

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_KEY_GENERATE_WITH_PYTHON_SECRETS

# Database Configuration
DATABASE_URL=sqlite:///hydroai.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:secure_password@localhost:5432/hydroai_db

# JWT Configuration
JWT_SECRET_KEY=REPLACE_WITH_JWT_SECRET_GENERATE_WITH_PYTHON_SECRETS
JWT_ACCESS_TOKEN_EXPIRES=3600

# Demo Configuration
DEMO_MODE=true
DEMO_PASSWORD=SET_YOUR_DEMO_PASSWORD_HERE

# Email Configuration (for alerts)
# SECURITY NOTE: Use App Passwords for Gmail, not your main password!
# Generate at: https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-notifications@yourdomain.com
# CRITICAL: Use App-Specific Password generated from Google Account settings
MAIL_PASSWORD=REPLACE_WITH_16_CHAR_APP_SPECIFIC_PASSWORD_FROM_GOOGLE

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# External APIs
WEATHER_API_KEY=GET_FROM_OPENWEATHERMAP_API_DASHBOARD

# Application Settings
DEBUG=true
TESTING=false
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/hydroai.log

# Security Settings (Production)
# Uncomment and set for production deployment
# SECURE_SSL_REDIRECT=true
# SESSION_COOKIE_SECURE=true
# CSRF_COOKIE_SECURE=true

# AWS Configuration (If using AWS services)
# AWS_ACCESS_KEY_ID=REPLACE_WITH_YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=REPLACE_WITH_YOUR_AWS_SECRET_KEY
# AWS_DEFAULT_REGION=us-west-2